@{
    ViewData["Title"] = "Search on Children";

}
<h1>Search Result</h1>

@if (ViewBag.SearchResult != null && ((System.Data.DataTable)ViewBag.SearchResult).Rows.Count > 0){
    <table>
        <tr>
            @foreach (var childColumn in ViewBag.SearchResult.Columns)
            {
                <th>@childColumn.ColumnName</th>
            }
        </tr>

        @foreach (var row in ViewBag.SearchResult.Rows)
        {
            <tr>
                @for (int i = 0; i < ViewBag.SearchResult.Columns.Count; i++)
                {
                    <td>@row[i]</td>
                }
            </tr>
        }
    </table>
} else {
    <p>No Children found!</p>
    <a asp-controller="Home" asp-action="Index">Go back home</a>

}